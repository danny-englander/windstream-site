# .gitignore for Drupal 9/10 Composer-based projects

# --- Recipes ---
# Ignore all recipes by default
recipes/*
!recipes/custom/
!recipes/custom/**
#!recipes/my_project/
#!recipes/my_project/**

# --- Composer-managed files & directories ---
/web/core/
/web/vendor/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web/libraries/
/vendor/
composer.phar
composer
robo.phar
robo
drush.phar
drush
drupal.phar
drupal
/drush/contrib/

# --- Ignore custom themes (they have their own repos) ---
/web/themes/custom/windstream/

# --- Sensitive/Environment files ---
/web/sites/*/*settings*.php
/web/sites/*/*services*.yml
/web/sites/*/settings.local.php
/web/sites/default/local.services.yml
/web/sites/default/localdev.services.yml
.env*
.lando.local.yml

# --- User-generated content ---
/web/sites/*/files/
/web/sites/*/public/
/web/sites/*/private/
/web/sites/*/files-public/
/web/sites/*/files-private/

# --- Temporary, cache, and translations ---
/web/sites/*/translations/
/web/sites/*/tmp/
/web/sites/*/cache/
/web/sites/simpletest/

# --- Example/README/boilerplate files (Composer-managed) ---
/web/modules/README.txt
/web/profiles/README.txt
/web/sites/development.services.yml
/web/sites/example.settings.local.php
/web/sites/example.sites.php
/web/sites/README.txt
/web/themes/README.txt
/web/.csslintrc
/web/.editorconfig
/web/.eslintignore
/web/.eslintrc.json
/web/.gitattributes
/web/.htaccess
/web/.ht.router.php
/web/autoload.php
/web/composer.json
/web/composer.lock
/web/example.gitignore
/web/index.php
/web/INSTALL.txt
/web/LICENSE.txt
/web/README.txt
/web/robots.txt
/web/update.php
/web/web.config

# --- Databases & backups ---
/*.sql
/*.sql.gz
/db/*.sql
/db/*.sql.gz
backups/*.sql.gz

# --- Node/NPM ---
node_modules/
.yarn

# --- IDE/editor files ---
.vscode/
.idea/
*.code-workspace

# --- OS-generated files ---
.DS_Store
/.DS_Store
web/.DS_Store

# --- SASS/CSS ---
/.sass-cache/
*.css.map

# --- Compressed files ---
*.gz
*.zip

# --- Misc ---
*.Identifier
web/sites/local-development.services.yml
